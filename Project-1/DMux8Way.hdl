/**
 * 8-way demultiplexor:
 * [a, b, c, d, e, f, g, h] = [in, 0,  0,  0,  0,  0,  0,  0] if sel = 000
 *                            [0, in,  0,  0,  0,  0,  0,  0] if sel = 001
 *                            [0,  0, in,  0,  0,  0,  0,  0] if sel = 010
 *                            [0,  0,  0, in,  0,  0,  0,  0] if sel = 011
 *                            [0,  0,  0,  0, in,  0,  0,  0] if sel = 100
 *                            [0,  0,  0,  0,  0, in,  0,  0] if sel = 101
 *                            [0,  0,  0,  0,  0,  0, in,  0] if sel = 110
 *                            [0,  0,  0,  0,  0,  0,  0, in] if sel = 111
 */
CHIP DMux8Way {
    IN in, sel[3];
    OUT a, b, c, d, e, f, g, h;

    PARTS:
    DMux(in= in, sel= sel[2], a= u0, b= l0);

    DMux(in= u0, sel= sel[1], a=u1 , b= l1);
    DMux(in= l0, sel= sel[1], a=u2 , b= l2);

    DMux(in= u1, sel= sel[0], a= a, b= b);
    DMux(in= l1, sel= sel[0], a= c, b= d );
    DMux(in= u2, sel= sel[0], a= e , b= f);
    DMux(in= l2, sel= sel[0], a= g, b= h);
}